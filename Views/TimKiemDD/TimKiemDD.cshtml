@using Gymer.Models;
@model List<DinhDuong>

@{
    ViewBag.Title = "BaiTap";
    Layout = "~/Views/Layout/Layout.cshtml";
}


<div class="banner_w3lspvt">
    <div class="csslider infinity" id="slider1">

        <div class="banner_slide_bg">

            <img src="~/Content/Img/BannerBT.jpg" height="400" ; width="1350" />
            <div class="container">
                <div class="banner-text">

                </div>
            </div>
        </div>

    </div>
</div>



<div class="container-fluid">
    <div class="list-group" style="width: 75%; float: left; margin-top:-15%">
        @foreach (var item in Model)
        {
        <div class="list-group-item list-group-item-action">
            <div style="width:40%;float:left">
                <img src="@Url.Content("~/Content/ImgDD/" +item.AnhThucPham)" style="width: 360px; height: 200px; float: left; box-shadow: 0.1px 0.1px 0.1px 0.1px;" />
            </div>
            <div style="width:60%; float:right ">
                <b style="font-family:Arial; font-size:30px">@item.TenThucPham</b>
                <p style="max-height:140px; overflow:hidden">@item.TieuDe</p>
                <a href="@Url.Action("ChiTietDD","ChiTietBaiVietDD", new {@madinhduong =item.Ma_DinhDuong })"> <b class="btn btn-danger">XEM THÊM</b></a>
            </div>
        </div>
        }
    </div>



    <div class="list-group" style="width: 19%; float: right; margin-top:-14%;">
        <br />
        <b class="btn btn-dark">Có thể bạn thích</b>

        @Html.Action("BaiVietMoiNhat", "HienThi")

    </div>
</div>
<br />
<br />
<div style="margin-left:60%">
    <b class="btn btn-success">Tìm kiếm</b>
    <br />
    <form action="@Url.Action("TimKiem", "TimKiem")">
        <input type="search" name="Key" />
    </form>
</div>
<div class="clearfix"></div>





