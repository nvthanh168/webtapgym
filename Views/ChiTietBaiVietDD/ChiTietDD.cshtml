@using Gymer.Models;
@model  DinhDuong
@{
    ViewBag.Title = "ChiTietDD";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<div class="banner_w3lspvt">
    <div class="csslider infinity" id="slider1">

        <div class="banner_slide_bg">

            <img src="~/Content/ImgDD/BannerDD2.jpg" height="500px" ; width="1350px" />
            <div class="container">
                <div class="banner-text">

                </div>
            </div>
        </div>

    </div>
</div>
<div class="container-fluid" style="margin-top:10%">
    <div>
        <div class="list-group" style="width: 77%; float: left; margin-top:-28%;">
            <div style="margin-left:4%;">

                <b style="font-size: 20px;"><i class="fa fa-eye">&nbsp;</i>@Model.LuotXem</b><br />
                <b style="font-family:Arial; font-size: 30px; ">@Model.TenThucPham</b>
                <p>@Model.TieuDe</p>
