                <br />

            </div>
        </div>

        <div class="list-group" style="width: 23%; float: right; margin-top:-28%;">
            <b class="btn btn-dark">Có thể bạn thích</b>
            @Html.Action("BaiVietDDMoiNhat", "HienThi")

        </div>


        <!--Chi se lien ket-->
        <div class="socials-share">
            <a class="bg-facebook" href="http://www.facebook.com/share.php?u=http://tus.somee.com/ChiTietBaiVietDD/ChiTietDD?madinhduong=@Model.Ma_DinhDuong" target="_blank"><span class="fa fa-facebook"></span> Share</a>
            <a class="bg-twitter" href="https://twitter.com/intent/tweet?url=https://localhost:44380/ChiTietBaiVietDD/ChiTietDD?madinhduong=@Model.Ma_DinhDuong" target="_blank"><span class="fa fa-twitter"></span> Tweet</a>
            <a class="bg-pinterest" href="https://www.pinterest.com/pin/create/button/?url=http://tus.somee.com/HienThi/Index&media=/Content/ImgDD/@Model.AnhThucPham&description=@Model.NoiDung" target="_blank"><span class="fa fa-pinterest"></span> Pin</a>

        </div>
        <!--Chia se lien ket-->
    </div>
</div>
<div class="clearfix"></div>

