@using Gymer.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<BaiVietKT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<div class="banner_w3lspvt">
    <div class="csslider infinity" id="slider1">

        <div class="banner_slide_bg">

            <img src="~/Content/Banner/Banner6.jpg" height="500" ; width="1350" />
            <div class="container">
                <div class="banner-text">

                </div>
            </div>
        </div>

    </div>
</div>

<div class="container-fluid" style="margin-top: 10%">
    <div class="list-group" style="width: 75%; float: left; margin-top:-25%">
        <form action="@Url.Action("TimKiemKT", "TiemkiemKT")" method="post">
            <input type="search" name="Key" class="form-control col-5" placeholder="Nhập từ khóa" style="float: left" />
            <b class="btn btn-success" style="float: left; margin-left: 1%"><i class="fa fa-search"></i></b>
        </form>
        @foreach (var item in Model)
        {

            <div class="list-group-item list-group-item-action">
                <div style="width:40%;float:left">
                    <img src="@Url.Content("~/Content/ImgBVKT/" +item.AnhChuDe)" style="width: 360px; height: 200px; float: left; box-shadow: 0.1px 0.1px 0.1px 0.1px;" />
                </div>
                <div style="width:60%; float:right ">
                    <b style="font-family:Arial; font-size:30px; color:cornflowerblue">@item.TieuDe</b>
                    <p style="max-height:90px; overflow:hidden">@item.NoiDung</p>
                    <a href="@Url.Action("ChiTietBaiVietKT","BaiVietKT", new {@machitietkt = item.MaBaiVietKT })"> <b class="btn btn-danger">XEM THÊM</b></a>
                </div>
            </div>
        }
    </div>
    <div class="list-group" style="width: 23%; float: right; margin-top:-25%;">
        <b class="btn btn-dark">Có thể bạn thích</b>
        @Html.Action("BaiVietKTMoiNhat", "BaiVietKT")
    </div>

</div>
<div class="clearfix"></div>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<center>@Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page }))</center>
